// form fields mixins
mixin textField(label, model, ref, maxLength)
  .field.column
    label.label= label
    .control
      input.input(type='text' placeholder= label maxlength= maxLength ref= ref v-model= model)
mixin numberField(label, model, ref)
  .field.column
    label.label= label
    .control
      if ref
        input.input(type='number' placeholder= label ref= ref v-model= model)
      else
        input.input(type='number' placeholder= label v-model= model)
mixin currencyField(label, model, ref)
  .field.column
    label.label= label
    .control
      if ref
        vue-numeric.input(currency="Gs" separator="." ref= ref v-model= model)
      else
        vue-numeric.input(currency="Gs" separator="." v-model= model)
mixin dateField(label, model)
  .field.column
    label.label= label
    .control
      input.input(type='date' placeholder= label :value= model)
mixin txtAreaField(label, model)
  .field.column
    label.label= label
    .control
      textarea.textarea(placeholder= label v-model= model)
mixin checkboxField(label, model)
  .field.column
    .control
      label.checkbox= label
      input(type='checkbox' v-model= model)
